{
  "name": "sc2-things",
  "version": "0.1.0",
  "private": true,
  "homepage": "http://sc2-things.liam.geek.nz/",
  "dependencies": {
    "@babel/node": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@types/ramda": "^0.26.38",
    "axios": "^0.19.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "ramda": "^0.26.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "^3.3.0",
    "spritesmith": "^3.4.0",
    "xml2js": "^0.4.23"
  },
  "scripts": {
    "start": "run-s build:data build:icons start:client",
    "start:client": "react-scripts start",
    "build": "run-s build:data build:icons build:client",
    "build:data": "babel-node scripts/build-data.js",
    "build:icons": "babel-node scripts/build-icons.js",
    "build:client": "react-scripts build",
    "test": "run-s build test",
    "test:jest": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always"
  }
}
